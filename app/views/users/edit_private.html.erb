<div class="login">
  <strong>个人用户 修改资料</strong>
</div>

<div class="xian">

  <% form_for(@profile) do |f| %>
  <%= f.error_messages %>
  <%= hidden_field :user, :is_company %>

  <table width="100%" border="0" cellspacing="0" cellpadding="3">
    <tr>
      <td colspan="3"><strong>个人信息</strong></td>
    </tr>

  <% if @profile.errors %>
    <tr>
      <%= error_messages_for :profile %>
    </tr>
  <% end %>

    <tr>
      <td width="16%" align="right">
        <span class="font_cou">*</span>电子邮件：
      </td>
      <td width="32%">
      <label>
        <%=h @user.email %>
      </label>
      </td>
      <td width="52%" class="font_s">(您的登录帐号)</td>
    </tr>
    <tr>
      <td align="right"><span class="font_cou"></span>昵称：</td>
      <td><%= f.text_field :name, :class =>'bks' %></td>
      <td class="font_s"></td>
    </tr>
    <tr>
      <td align="right"><span class="font_cou"></span>詳細地址：</td>
      <td><%= f.text_field :address, :class =>'bks' %></td>
      <td class="font_s"></td>
    </tr>
    <tr>
      <td align="right"><span class="font_cou"></span>邮编：</td>
      <td><%= f.text_field :zipcode, :class =>'bks' %></td>
      <td class="font_s"></td>
    </tr>
    <tr>
      <td align="right"><span class="font_cou"></span>电话：</td>
      <td><%= f.text_field :phone, :class =>'bks' %></td>
      <td class="font_s"></td>
    </tr>
    <tr>
      <td align="right"><span class="font_cou"></span>网站：</td>
      <td><%= f.text_field :website, :class =>'bks' %></td>
      <td class="font_s"></td>
    </tr>
    <tr>
      <td align="right"><span class="font_cou"></span>单位：</td>
      <td><%= f.text_field :institution, :class =>'bks' %></td>
      <td class="font_s"></td>
    </tr>
  </table>

<div class="btns">
  <%= f.submit "修改" %>
</div>

<% end %>


&nbsp;&nbsp;

<% form_tag change_password_path, :method => :put do |f| %>

  <table width="100%" border="0" cellspacing="0" cellpadding="3">
    <tr>
      <td colspan="3"><strong>修改密码</strong></td>
    </tr>

  <% if @user.errors %>
    <tr>
      <%= error_messages_for :user %>
    </tr>
  <% end %>

    <tr>
      <td width="16%" align="right">
        <span class="font_cou">*</span>旧密码：
      </td>
      <td width="32%">
      <label><%= password_field_tag :old_password %></label>
      </td>
      <td width="52%" class="font_s"></td>
    </tr>
    <tr>
      <td width="16%" align="right">
        <span class="font_cou">*</span>新密码：
      </td>
      <td width="32%">
      <label><%= password_field_tag :password %></label>
      </td>
      <td width="52%" class="font_s"></td>
    </tr>
    <tr>
      <td width="16%" align="right">
        <span class="font_cou">*</span>新密码确认：
      </td>
      <td width="32%">
      <label><%= password_field_tag :password_confirmation %></label>
      </td>
      <td width="52%" class="font_s"></td>
    </tr>
  </table>


<div class="btns">
  <%= submit_tag "修改" %>
</div>

<% end %>

</div><!-- xian -->
