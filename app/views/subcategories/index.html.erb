<h1>所有分类</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Popularity</th>
    <th>Products count</th>
    <th>Category</th>
  </tr>

<% @subcategories.each do |subcategory| %>
  <tr>
    <td><%=h subcategory.name %></td>
    <td><%=h subcategory.popularity %></td>
    <td><%=h subcategory.products_count %></td>
    <td><%=h subcategory.category %></td>
    <td><%= link_to 'Show', subcategory %></td>
    <td><%= link_to 'Edit', edit_subcategory_path(subcategory) %></td>
    <td><%= link_to 'Destroy', subcategory, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

