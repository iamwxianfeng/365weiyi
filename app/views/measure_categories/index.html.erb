<h1>Listing measure_categories</h1>

<table>
  <tr>
    <th>Name</th>
  </tr>

<% @measure_categories.each do |measure_category| %>
  <tr>
    <td><%=h measure_category.name %></td>
    <td><%= link_to 'Show', measure_category %></td>
    <td><%= link_to 'Edit', edit_measure_category_path(measure_category) %></td>
    <td><%= link_to 'Destroy', measure_category, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New measure_category', new_measure_category_path %>