      <li><a href="#gmzx">购买咨询</a></li>
    </ul>

    <div class="goods_description">
      <div class="goods_pst">
        <ul>
          <dl>
            <dt>面料产地：</dt>
            <dd><%= @product.origin %>&nbsp;</dd>
          </dl>
          <dl>
            <dt>纱支：</dt>
            <dd><%= @product.yarn %>&nbsp;</dd>
          </dl>
          <dl>
            <dt>克重：</dt>
            <dd><%= @product.weight %>&nbsp;</dd>
          </dl>
          <dl>
