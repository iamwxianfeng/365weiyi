<div class="fosdt">
  <div class="z">
  <% form_for(@feedback) do |f| %>
    <%= error_messages_for :feedback %>
    <table width="100%" border="0" cellspacing="0" cellpadding="0">
    <tr>
      <td height="45"><img src="/images/img/bsd.gif" width="202" height="33" /></td>
      <td>&nbsp;</td>
    </tr>
    <tr>
      <td colspan="2">
        <%= f.text_area :description, :size => '45x5', :class => "ysd" %>
      </td>
    </tr>
    <tr>
      <td>昵称：<%= f.text_field :name, :class => 'tsdd' %></td>
      <td align="right"><%= f.submit '发表评论', :class => "bost" %></td>
    </tr>
    </table>
  <% end %>
  </div><!-- z -->

  <div class="u">
    <ul class="liesd">

    <% if @feedbacks.empty? %>
      <li>暂无留言</li>
    <% else %>

      <% @feedbacks.each do |feedback| %>
        <% content = h(feedback.name + ':' + feedback.description) %>
        <li title="<%= content %>">
        <%= truncate(content, 130) %>
        </li>
      <% end %>

    <% end %>

    </ul>
  </div><!-- u -->

</div><!-- fosdt -->
