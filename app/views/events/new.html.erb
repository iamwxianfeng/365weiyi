<div class="fosdt">
  <div class="bt"><img src="/images/img/cai.jpg" /></div>
  <div class="lif bokd">

  <% form_for :user, :url => {:action => 'create'} do |f| %>
    <%= error_messages_for :user %>
    <table width="100%" border="0" cellspacing="0" cellpadding="0">
      <tr>
        <td colspan="3" class="bak">
          <div class="tgd"><%= text_field_tag "price" %></div>
        </td>
      </tr>

    <% unless logged_in? %>
      <tr>
        <td width="142" height="32" align="right"><span class="fonty">*我的邮箱:</span><br /></td>
        <td width="235"><%= f.text_field :email, :class => "tsdd" %></td>
        <td width="169" class="font_cou">相关结果将邮件通知</td>
      </tr>
      <tr>
        <td height="32" align="right" class="fonty">*我的密码:</td>
        <td><%= f.password_field :password, :class => "tsdd" %></td>
        <td>&nbsp;</td>
      </tr>
	    <tr>
        <td height="32" align="right" class="fonty">*再次确认密码:</td>
        <td><%= f.password_field :password_confirmation, :class => "tsdd" %></td>
        <td>&nbsp;</td>
      </tr>
    <% end %>

	    <tr>
        <td height="32" align="right" class="fonty">我的电话:</td>
        <td><input type="text" class="tsdd" name="phone" value="<%= params[:phone] %>" /></td>
        <td>&nbsp;</td>
      </tr>

	    <tr>
        <td height="32" align="right" class="fonty">我的身高:</td>
        <td><input type="text" class="tsdd" name="height" value="<%= params[:height] %>" />&nbsp;</td>
        <td>&nbsp;</td>
      </tr>
	    <tr>
        <td height="32" align="right" class="fonty">我的体型:</td>
        <td>
          <input type="radio" name="figure" value="偏胖" /><label>偏胖</label>
          <input type="radio" name="figure" value="标准" /><label>标准</label>
          <input type="radio" name="figure" value="偏廋" /><label>偏廋</label>
        </td>
        <td>&nbsp;</td>
      </tr>
      <tr>
        <td height="72" colspan="2" align="center"><%= f.submit "我要提交", :class => "botd" %></td>
      <% unless logged_in? %>
        <td align="right" class="fonty"><a href="/login?return_to=/events">已注册用户请登录参加活动</a></td>
      <% end %>
      </tr>
    </table>
    <% end %>

  </div>
