<h1>Blog文章列表</h1>

<%= link_to '创建新文章', new_kadmin_blog_post_path %>

<table>
  <tr class="tbCaption">
    <th>ID</th>
    <th>标题</th>
    <th>内容</th>
    <th>分类</th>
    <th>推荐产品1</th>
    <th>推荐产品2</th>
    <th>创建用户</th>
    <th>是否发布</th>
    <th>创建时间</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @blog_posts.each do |blog_post| %>
  <tr class="<%= cycle('odd', 'even') %>">
    <td><%= blog_post.id %></td>
    <td><%= blog_post.title %></td>
    <td><%= truncate blog_post.content %></td>
    <td><%= blog_post.category.try(:name) %></td>
    <td><%= link_to blog_post.product1_id , "/products/#{blog_post.product1_id}" , :target=>"_blank" %></td>
    <td><%= link_to blog_post.product2_id , "/products/#{blog_post.product2_id}" , :target=>"_blank" %></td>
    <td><%= blog_post.user.profile.name  %></td>
    <td><%= blog_post.published  %></td>
    <td><%= blog_post.created_at %></td>
    <td><%= link_to '显示', blog_post  , :target=>"_blank" %></td>
    <td><%= link_to '编辑', edit_kadmin_blog_post_path(blog_post) %></td>
    <td><%= link_to '删除', [:kadmin,blog_post], :confirm => '确定?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br/>


